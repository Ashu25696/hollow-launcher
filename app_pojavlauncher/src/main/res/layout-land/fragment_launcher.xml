<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_menu_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp"
    tools:ignore="MissingDefaultResource">

    <!-- Scrollable menu -->
    <ScrollView
        android:id="@+id/menu_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerHorizontal"
            android:showDividers="middle">

            <!-- News/Wiki Button -->
            <FrameLayout
                android:id="@+id/news_button"
                style="@style/MenuItemStyle"
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/megaphone"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        style="@style/MenuItemText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/mcl_tab_wiki"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </FrameLayout>

            <!-- Social Media Button -->
            <FrameLayout
                android:id="@+id/social_media_button"
                style="@style/MenuItemStyleDark"
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/discord"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        style="@style/MenuItemText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/mcl_button_social_media"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </FrameLayout>

            <!-- Custom Control Button -->
            <FrameLayout
                android:id="@+id/custom_control_button"
                style="@style/MenuItemStyle"
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/expand"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        style="@style/MenuItemText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/mcl_option_customcontrol"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </FrameLayout>

            <!-- Install JAR Button -->
            <FrameLayout
                android:id="@+id/install_jar_button"
                style="@style/MenuItemStyleDark"
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/settings_1"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        style="@style/MenuItemText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/main_install_jar_file"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </FrameLayout>

            <!-- Share Logs Button -->
            <FrameLayout
                android:id="@+id/share_logs_button"
                style="@style/MenuItemStyle"
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/settings_2"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        style="@style/MenuItemText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/main_share_logs"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </FrameLayout>

            <!-- Open Files Button -->
            <FrameLayout
                android:id="@+id/open_files_button"
                style="@style/MenuItemStyleDark"
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/folder"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        style="@style/MenuItemText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/mcl_button_open_directory"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom bar -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/bottom_bar_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.kdt.mcgui.mcVersionSpinner
            android:id="@+id/mc_version_spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background_app"
            android:spinnerMode="dropdown"
            android:popupBackground="#000000"/>

        <ImageButton
            android:id="@+id/edit_profile_button"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/edit"
            android:padding="12dp"
            android:scaleType="fitCenter"/>

        <Button
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/main_play"
            android:textAllCaps="true"
            android:background="@drawable/button_launch_bg"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="24dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
